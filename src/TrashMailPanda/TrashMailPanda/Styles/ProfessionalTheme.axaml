<ResourceDictionary xmlns="https://github.com/avaloniaui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Professional Color Palette -->
    <!-- Primary Colors -->
    <SolidColorBrush x:Key="AccentBlue">#3A7BD5</SolidColorBrush>
    <SolidColorBrush x:Key="AccentBlueDark">#2A5BA8</SolidColorBrush>
    <SolidColorBrush x:Key="AccentBlueLight">#60A5FA</SolidColorBrush>
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundPrimary">#F7F8FA</SolidColorBrush>
    <SolidColorBrush x:Key="CardBackground">#FFFFFF</SolidColorBrush>
    <SolidColorBrush x:Key="HoverBackground">#F1F5F9</SolidColorBrush>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary">#2D3748</SolidColorBrush>
    <SolidColorBrush x:Key="TextSecondary">#4A5568</SolidColorBrush>
    <SolidColorBrush x:Key="TextTertiary">#718096</SolidColorBrush>
    <SolidColorBrush x:Key="TextOnAccent">#FFFFFF</SolidColorBrush>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderLight">#E2E8F0</SolidColorBrush>
    <SolidColorBrush x:Key="BorderMedium">#CBD5E1</SolidColorBrush>
    <SolidColorBrush x:Key="BorderStrong">#94A3B8</SolidColorBrush>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="StatusSuccess">#4CAF50</SolidColorBrush>
    <SolidColorBrush x:Key="StatusWarning">#FFB300</SolidColorBrush>
    <SolidColorBrush x:Key="StatusError">#E57373</SolidColorBrush>
    <SolidColorBrush x:Key="StatusInfo">#3A7BD5</SolidColorBrush>


    <!-- Professional Box Shadows -->
    <!-- Exact format: offsetX offsetY blurRadius spreadRadius color -->
    <BoxShadows x:Key="ShadowSmall">0 2 4 0 #0000000D</BoxShadows>
    <BoxShadows x:Key="ShadowMedium">0 4 8 0 #00000015</BoxShadows>
    <BoxShadows x:Key="ShadowLarge">0 8 16 0 #0000001A</BoxShadows>
    <BoxShadows x:Key="ShadowXLarge">0 16 32 0 #0000001F</BoxShadows>
    
    <!-- Dashboard-specific shadows from mockup -->
    <BoxShadows x:Key="DashboardCardShadow">0 4 12 0 #00000015</BoxShadows>
    <BoxShadows x:Key="ProviderCardShadow">0 2 8 0 #00000010</BoxShadows>
    <BoxShadows x:Key="ProviderCardHoverShadow">0 6 16 0 #00000020</BoxShadows>

    <!-- Professional Corner Radii -->
    <CornerRadius x:Key="CornerRadiusSmall">4</CornerRadius>
    <CornerRadius x:Key="CornerRadiusMedium">6</CornerRadius>
    <CornerRadius x:Key="CornerRadiusLarge">8</CornerRadius>
    <CornerRadius x:Key="CornerRadiusXLarge">12</CornerRadius>
    
    <!-- Professional Spacing System -->
    <Thickness x:Key="SpacingXSmall">4</Thickness>
    <Thickness x:Key="SpacingSmall">8</Thickness>
    <Thickness x:Key="SpacingMedium">16</Thickness>
    <Thickness x:Key="SpacingLarge">24</Thickness>
    <Thickness x:Key="SpacingXLarge">32</Thickness>
    
    <!-- Border Thickness System -->
    <Thickness x:Key="BorderThicknessThin">1</Thickness>
    <Thickness x:Key="BorderThicknessMedium">2</Thickness>
    <Thickness x:Key="BorderThicknessThick">3</Thickness>


</ResourceDictionary>