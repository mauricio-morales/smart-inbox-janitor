<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TrashMailPanda.ViewModels"
             xmlns:controls="using:TrashMailPanda.Views.Controls"
             xmlns:conv="using:TrashMailPanda.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="TrashMailPanda.Views.ProviderStatusDashboard"
             x:DataType="vm:ProviderStatusDashboardViewModel">

    <Design.DataContext>
        <vm:ProviderStatusDashboardViewModel/>
    </Design.DataContext>

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,*,Auto" Margin="24" Background="{DynamicResource RegionColor}">
        
        <!-- Header Section -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,24">
            
            <!-- App Icon and Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                <Border Background="{DynamicResource SystemAccentColor}" Width="48" Height="48" CornerRadius="24">
                    <TextBlock Text="ðŸ¼" FontSize="28" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="TrashMail Panda" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="{DynamicResource ChromeMediumColor}"/>
                    <TextBlock Text="Provider Status Dashboard" 
                              FontSize="14" 
                              Foreground="{DynamicResource ChromeLowColor}"/>
                </StackPanel>
            </StackPanel>

            <!-- Overall Status Summary -->
            <StackPanel Grid.Column="1" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Spacing="4">
                <TextBlock Text="{Binding OverallStatus}"
                          FontSize="16"
                          FontWeight="Medium"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"/>
                <TextBlock Text="{Binding HealthyProvidersText}"
                          FontSize="12"
                          Foreground="{DynamicResource ChromeLowColor}"
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="2" 
                       Orientation="Vertical" 
                       Spacing="8"
                       VerticalAlignment="Center">
                
                <!-- Refresh All Button -->
                <Button Command="{Binding RefreshAllProvidersCommand}"
                        IsEnabled="{Binding !IsRefreshing}"
                        Classes="secondary"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="ðŸ”„" FontSize="14"/>
                        <TextBlock Text="Refresh All" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- Main Dashboard Access Button -->
                <Button Command="{Binding AccessMainDashboardCommand}"
                        IsVisible="{Binding CanAccessMainDashboard}"
                        Classes="primary"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="âœ¨" FontSize="14"/>
                        <TextBlock Text="Open Dashboard" FontSize="13" FontWeight="Medium"/>
                    </StackPanel>
                </Button>

                <!-- Setup All Button -->
                <Button Command="{Binding SetupAllRequiredProvidersCommand}"
                        IsVisible="{Binding CanAccessMainDashboard, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}"
                        Classes="primary"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="âš™ï¸" FontSize="14"/>
                        <TextBlock Text="Setup All" FontSize="13"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" 
                     HorizontalScrollBarVisibility="Disabled"
                     VerticalScrollBarVisibility="Auto">
            
            <StackPanel Spacing="16">
                
                <!-- Loading Overlay -->
                <Border IsVisible="{Binding IsLoading}"
                        Background="{DynamicResource AltHighColor}"
                        BorderBrush="{DynamicResource AltMediumHighColor}"
                        BorderThickness="1"
                        Padding="24"
                        CornerRadius="8"
                        BoxShadow="0 4 12 0 #00000015"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" 
                               Spacing="12"
                               HorizontalAlignment="Center">
                        <Border Width="20" Height="20" 
                                CornerRadius="10"
                                Background="{DynamicResource SystemAccentColor}"
                                Classes="loading-spinner"/>
                        <TextBlock Text="Checking provider status..." 
                                  FontSize="14"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Error Summary (when errors exist) -->
                <Border IsVisible="{Binding HasErrors}"
                        Classes="ErrorCard"
                        Padding="16"
                        CornerRadius="8">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="âš ï¸" FontSize="16"/>
                            <TextBlock Text="Issues Detected" 
                                      FontSize="14" 
                                      FontWeight="Medium"
                                      Foreground="{DynamicResource ErrorText}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding ErrorSummary}"
                                  FontSize="12"
                                  Foreground="{DynamicResource ErrorText}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Provider Cards Grid -->
                <ItemsControl ItemsSource="{Binding ProviderCards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" 
                                        HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:ProviderStatusCard Margin="4"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Detailed Status Panel (expandable) -->
                <Expander IsVisible="{Binding ShowDetailedStatus}"
                          Header="Detailed Status Information"
                          Padding="0"
                          Margin="0,16,0,0">
                    <Expander.Content>
                        <Border Background="{DynamicResource AltHighColor}"
                                Padding="16"
                                CornerRadius="8"
                                BorderBrush="{DynamicResource AltMediumHighColor}"
                                BorderThickness="1">
                            <StackPanel Spacing="12">
                                
                                <!-- System Information -->
                                <StackPanel Spacing="6">
                                    <TextBlock Text="System Information" 
                                              FontSize="14" 
                                              FontWeight="Medium"/>
                                    <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto,Auto">
                                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                                  Text="Total Providers:"
                                                  FontSize="12" 
                                                  Foreground="{DynamicResource ChromeLowColor}"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                                  Text="{Binding TotalProviderCount}"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource ChromeMediumColor}"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                                  Text="Healthy Providers:"
                                                  FontSize="12" 
                                                  Foreground="{DynamicResource ChromeLowColor}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                                  Text="{Binding HealthyProviderCount}"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource ChromeMediumColor}"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                                  Text="Last Refresh:"
                                                  FontSize="12" 
                                                  Foreground="{DynamicResource ChromeLowColor}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                                  Text="{Binding LastRefreshText}"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource ChromeMediumColor}"/>
                                    </Grid>
                                </StackPanel>

                                <Separator/>

                                <!-- Provider Requirements -->
                                <StackPanel Spacing="6">
                                    <TextBlock Text="Setup Requirements" 
                                              FontSize="14" 
                                              FontWeight="Medium"/>
                                    <TextBlock FontSize="12" 
                                              Foreground="{DynamicResource ChromeLowColor}"
                                              TextWrapping="Wrap">
                                        <Run Text="Gmail:"/> OAuth setup with your Google account for email access
                                        <LineBreak/>
                                        <Run Text="OpenAI:"/> API key for AI-powered email classification
                                        <LineBreak/>
                                        <Run Text="SQLite:"/> Automatic local database setup (no user action required)
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Expander.Content>
                </Expander>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource AltHighColor}"
                BorderBrush="{DynamicResource AltMediumHighColor}"
                BorderThickness="1,0,1,1"
                Padding="16,8"
                Margin="0,16,0,0"
                CornerRadius="4">
            <Grid ColumnDefinitions="*,Auto">
            
            <!-- Status Message -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                <TextBlock Text="{Binding RefreshStatusMessage}"
                          FontSize="12"
                          Foreground="{DynamicResource ChromeLowColor}"
                          VerticalAlignment="Center"
                          IsVisible="{Binding !!RefreshStatusMessage}"/>
                
                <TextBlock Text="{Binding LastRefreshText}"
                          FontSize="12"
                          Foreground="{DynamicResource ChromeLowColor}"
                          VerticalAlignment="Center"
                          IsVisible="{Binding !RefreshStatusMessage}"/>
            </StackPanel>

            <!-- Toggle Details Button -->
            <Button Grid.Column="1"
                    Command="{Binding ToggleDetailedStatusCommand}"
                    Classes="toggle-details"
                    Padding="8,4">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <TextBlock Text="{Binding ShowDetailedStatus, StringFormat='\{0:Hide Details;Show Details\}'}"
                              FontSize="11"/>
                    <TextBlock Text="{Binding ShowDetailedStatus, StringFormat='\{0:â–²;â–¼\}'}"
                              FontSize="10"/>
                </StackPanel>
            </Button>
            </Grid>
        </Border>
    </Grid>

    <!-- Styles -->
    <UserControl.Styles>
        

        <!-- Toggle Details Button -->
        <Style Selector="Button.toggle-details">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource ChromeLowColor}"/>
        </Style>
        
        <Style Selector="Button.toggle-details:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource ChromeMediumColor}"/>
        </Style>

        <!-- Loading Spinner Animation -->
        <Style Selector="Border.loading-spinner">
            <Style.Animations>
                <Animation Duration="0:0:1" IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="RotateTransform.Angle" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
            <Setter Property="RenderTransform">
                <RotateTransform/>
            </Setter>
        </Style>

        <!-- Responsive Grid for smaller screens -->
        <Style Selector="UniformGrid">
            <Setter Property="Columns" Value="3"/>
        </Style>

        <!-- Expander styling -->
        <Style Selector="Expander">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style Selector="Expander /template/ ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource ChromeLowColor}"/>
        </Style>
        
        <Style Selector="Expander /template/ ToggleButton:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource ChromeMediumColor}"/>
        </Style>
    </UserControl.Styles>
</UserControl>