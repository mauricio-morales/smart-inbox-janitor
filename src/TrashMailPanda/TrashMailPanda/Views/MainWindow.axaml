<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TrashMailPanda.ViewModels"
        xmlns:views="using:TrashMailPanda.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="TrashMailPanda.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding WindowTitle}"
        Width="1200" Height="800"
        MinWidth="1000" MinHeight="700">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Navigation Header -->
        <Border Grid.Row="0" Background="#2E7D32" Height="48" Padding="16,0">
        <Grid>
            <Grid ColumnDefinitions="Auto,*,Auto">
                
                <!-- App Icon and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <Border Background="#4CAF50" Width="32" Height="32" CornerRadius="16">
                        <TextBlock Text="ðŸ¼" FontSize="20" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="TrashMail Panda" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="White"/>
                        <TextBlock Text="{Binding CurrentViewDescription}" 
                                  FontSize="11" 
                                  Foreground="#C8E6C9"/>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation Status -->
                <StackPanel Grid.Column="1" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="{Binding NavigationStatus}"
                              FontSize="13"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              IsVisible="{Binding !!NavigationStatus}"/>
                </StackPanel>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Column="2" 
                           Orientation="Horizontal" 
                           Spacing="8"
                           VerticalAlignment="Center">
                    
                    <!-- Provider Dashboard Button -->
                    <Button Command="{Binding ShowProviderDashboardCommand}"
                            Classes="nav-button"
                            IsEnabled="{Binding !IsNavigating}"
                            ToolTip.Tip="Provider Status Dashboard">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="ðŸ " FontSize="14"/>
                            <TextBlock Text="Providers" FontSize="12"/>
                        </StackPanel>
                    </Button>

                    <!-- Email Dashboard Button -->
                    <Button Command="{Binding ShowMainDashboardCommand}"
                            Classes="nav-button"
                            IsEnabled="{Binding CanAccessMainDashboard}"
                            IsVisible="{Binding CanAccessMainDashboard}"
                            ToolTip.Tip="Email Processing Dashboard">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="âœ¨" FontSize="14"/>
                            <TextBlock Text="Dashboard" FontSize="12"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
        </Border>

        <!-- Main Content Area -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}">
            <ContentControl.DataTemplates>
                <!-- Provider Status Dashboard Template -->
                <DataTemplate DataType="vm:ProviderStatusDashboardViewModel">
                    <views:ProviderStatusDashboard/>
                </DataTemplate>
                
                <!-- Email Dashboard Template -->
                <DataTemplate DataType="vm:EmailDashboardViewModel">
                    <views:EmailDashboard/>
                </DataTemplate>
            </ContentControl.DataTemplates>
        </ContentControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                Height="32"
                Padding="16,0"
                IsVisible="{Binding ShowStatusBar}">
            <Grid ColumnDefinitions="Auto,*,Auto">
                
                <!-- Navigation Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”„" 
                              FontSize="12"
                              IsVisible="{Binding IsNavigating}"/>
                    <TextBlock Text="Status:" 
                              FontSize="11" 
                              Foreground="#666"/>
                    <TextBlock Text="{Binding NavigationStatus}" 
                              FontSize="11" 
                              Foreground="#333"/>
                </StackPanel>

                <!-- Center Info -->
                <TextBlock Grid.Column="1"
                          Text="{Binding CurrentViewDescription}"
                          FontSize="11"
                          Foreground="#666"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>

                <!-- Right Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <TextBlock Text="Dashboard Ready" 
                              FontSize="11" 
                              Foreground="#4CAF50"
                              IsVisible="{Binding CanAccessMainDashboard}"/>
                    <TextBlock Text="Setup Required" 
                              FontSize="11" 
                              Foreground="#FF5722"
                              IsVisible="{Binding !CanAccessMainDashboard}"/>
                    
                    <TextBlock Text="{Binding WindowTitle}" 
                              FontSize="11" 
                              Foreground="#999"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <!-- Styles -->
    <Window.Styles>
        
        <!-- Navigation Button Styles -->
        <Style Selector="Button.nav-button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style Selector="Button.nav-button:pointerover">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="BorderBrush" Value="#66BB6A"/>
        </Style>
        
        <Style Selector="Button.nav-button:disabled">
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Content Templates -->
        <Style Selector="ContentControl">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        </Style>

        <!-- Status Bar Elements -->
        <Style Selector="TextBlock.status-text">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Styles>
</Window>
