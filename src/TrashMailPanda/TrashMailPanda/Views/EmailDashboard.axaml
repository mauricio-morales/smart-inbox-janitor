<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TrashMailPanda.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="TrashMailPanda.Views.EmailDashboard"
             x:DataType="vm:EmailDashboardViewModel">

    <Design.DataContext>
        <vm:EmailDashboardViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" Margin="24">
        
        <!-- Header Section -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,24">
            
            <!-- App Navigation and Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                <Button Command="{Binding ReturnToProviderDashboardCommand}"
                        Classes="navigation-button"
                        ToolTip.Tip="Return to Provider Status Dashboard">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="🏠" FontSize="16"/>
                        <TextBlock Text="Provider Status" FontSize="12"/>
                    </StackPanel>
                </Button>
                
                <Border Width="2" Height="32" Background="{DynamicResource BorderMedium}" VerticalAlignment="Center"/>
                
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="TrashMail Panda" 
                              FontSize="22" 
                              FontWeight="Bold"
                              Foreground="{DynamicResource TextPrimary}"/>
                    <TextBlock Text="Email Processing Dashboard" 
                              FontSize="13" 
                              Foreground="{DynamicResource TextSecondary}"/>
                </StackPanel>
            </StackPanel>

            <!-- Status Summary -->
            <StackPanel Grid.Column="1" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Spacing="4">
                <TextBlock Text="{Binding StatusMessage}"
                          FontSize="16"
                          FontWeight="Medium"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"/>
                <TextBlock Text="{Binding ConnectionStatusText}"
                          FontSize="12"
                          Foreground="{DynamicResource TextSecondary}"
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="2" 
                       Orientation="Horizontal" 
                       Spacing="12"
                       VerticalAlignment="Center">
                
                <!-- Refresh Connection Button -->
                <Button Command="{Binding RefreshConnectionCommand}"
                        IsEnabled="{Binding !IsLoading}"
                        Classes="dashboard-action"
                        ToolTip.Tip="Refresh provider connections">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="🔄" FontSize="14"/>
                        <TextBlock Text="Refresh" FontSize="12"/>
                    </StackPanel>
                </Button>

                <!-- Start Processing Button -->
                <Button Command="{Binding StartEmailProcessingCommand}"
                        IsEnabled="{Binding CanStartProcessing}"
                        Classes="dashboard-primary"
                        ToolTip.Tip="Begin email processing workflow">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="✨" FontSize="14"/>
                        <TextBlock Text="Start Processing" FontSize="12" FontWeight="Medium"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" ColumnDefinitions="*,300" ColumnSpacing="24">
            
            <!-- Primary Content Area -->
            <Border Grid.Column="0"
                    Background="{DynamicResource BackgroundPrimary}"
                    CornerRadius="12"
                    Padding="32">
                    
                <StackPanel Spacing="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                    
                    <!-- Loading State -->
                    <StackPanel IsVisible="{Binding IsLoading}"
                               Spacing="16"
                               HorizontalAlignment="Center">
                        <Border Width="48" Height="48" 
                                CornerRadius="24"
                                Background="{DynamicResource AccentBlue}"
                                Classes="loading-spinner"/>
                        <TextBlock Text="Initializing email dashboard..." 
                                  FontSize="16"
                                  HorizontalAlignment="Center"
                                  Foreground="#666"/>
                    </StackPanel>
                    
                    <!-- Ready State -->
                    <StackPanel IsVisible="{Binding IsReady}"
                               Spacing="20"
                               HorizontalAlignment="Center">
                        <Border Background="{DynamicResource StatusSuccess}" 
                                Width="80" 
                                Height="80" 
                                CornerRadius="40"
                                HorizontalAlignment="Center">
                            <TextBlock Text="📧" 
                                      FontSize="42" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Spacing="8" HorizontalAlignment="Center">
                            <TextBlock Text="Ready to Process Emails"
                                      FontSize="24"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      Foreground="{DynamicResource TextPrimary}"/>
                            <TextBlock Text="All providers are connected and healthy"
                                      FontSize="14"
                                      HorizontalAlignment="Center"
                                      Foreground="{DynamicResource TextSecondary}"/>
                        </StackPanel>

                        <Button Command="{Binding StartEmailProcessingCommand}"
                                Classes="dashboard-primary-large"
                                HorizontalAlignment="Center"
                                Margin="0,16,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="🚀" FontSize="18"/>
                                <TextBlock Text="Begin Email Triage" FontSize="16" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- Error State -->
                    <StackPanel IsVisible="{Binding HasErrors}"
                               Spacing="16"
                               HorizontalAlignment="Center">
                        <Border Background="{DynamicResource StatusError}" 
                                Width="60" 
                                Height="60" 
                                CornerRadius="30"
                                HorizontalAlignment="Center">
                            <TextBlock Text="⚠️" 
                                      FontSize="32" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Spacing="8" HorizontalAlignment="Center">
                            <TextBlock Text="Connection Issues Detected"
                                      FontSize="20"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      Foreground="{DynamicResource StatusErrorText}"/>
                            <TextBlock Text="{Binding ErrorMessage}"
                                      FontSize="14"
                                      HorizontalAlignment="Center"
                                      TextAlignment="Center"
                                      TextWrapping="Wrap"
                                      Foreground="{DynamicResource TextSecondary}"
                                      MaxWidth="400"/>
                        </StackPanel>

                        <Button Command="{Binding ReturnToProviderDashboardCommand}"
                                Classes="dashboard-secondary"
                                HorizontalAlignment="Center"
                                Margin="0,16,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="🔧" FontSize="16"/>
                                <TextBlock Text="Fix Provider Issues" FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Sidebar Panel -->
            <StackPanel Grid.Column="1" Spacing="16">
                
                <!-- Provider Status Summary -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="20"
                        BoxShadow="{DynamicResource ProviderCardShadow}">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Provider Status"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="{DynamicResource TextPrimary}"/>
                        
                        <!-- Gmail Status -->
                        <StackPanel Spacing="6">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                                <TextBlock Grid.Column="0" 
                                          Text="{Binding GmailStatus.Icon}" 
                                          FontSize="16"
                                          VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" 
                                          Text="Gmail"
                                          FontSize="14"
                                          VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" 
                                          Text="{Binding GmailStatus.StatusText}"
                                          FontSize="12"
                                          Foreground="{Binding GmailStatus.StatusColor}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <!-- OpenAI Status -->
                        <StackPanel Spacing="6">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                                <TextBlock Grid.Column="0" 
                                          Text="{Binding OpenAIStatus.Icon}" 
                                          FontSize="16"
                                          VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" 
                                          Text="OpenAI"
                                          FontSize="14"
                                          VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" 
                                          Text="{Binding OpenAIStatus.StatusText}"
                                          FontSize="12"
                                          Foreground="{Binding OpenAIStatus.StatusColor}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <!-- Storage Status -->
                        <StackPanel Spacing="6">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                                <TextBlock Grid.Column="0" 
                                          Text="{Binding StorageStatus.Icon}" 
                                          FontSize="16"
                                          VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" 
                                          Text="Storage"
                                          FontSize="14"
                                          VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" 
                                          Text="{Binding StorageStatus.StatusText}"
                                          FontSize="12"
                                          Foreground="{Binding StorageStatus.StatusColor}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Quick Actions -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="20"
                        BoxShadow="{DynamicResource ProviderCardShadow}">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Quick Actions"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="{DynamicResource TextPrimary}"/>
                        
                        <Button Command="{Binding ReturnToProviderDashboardCommand}"
                                Classes="quick-action"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="⚙️" FontSize="14"/>
                                <TextBlock Text="Provider Settings" FontSize="12"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding RefreshConnectionCommand}"
                                Classes="quick-action"
                                HorizontalAlignment="Stretch"
                                IsEnabled="{Binding !IsLoading}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="🔄" FontSize="14"/>
                                <TextBlock Text="Refresh Connections" FontSize="12"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- System Information -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="20"
                        BoxShadow="{DynamicResource ProviderCardShadow}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="System Info"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="{DynamicResource TextPrimary}"/>
                        
                        <Grid ColumnDefinitions="100,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="6">
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                      Text="Version:"
                                      FontSize="12" 
                                      Foreground="{DynamicResource TextSecondary}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                      Text="1.0.0"
                                      FontSize="12"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                      Text="Last Update:"
                                      FontSize="12" 
                                      Foreground="{DynamicResource TextSecondary}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                      Text="{Binding LastUpdateText}"
                                      FontSize="12"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                      Text="Status:"
                                      FontSize="12" 
                                      Foreground="{DynamicResource TextSecondary}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                      Text="{Binding SystemStatusText}"
                                      FontSize="12"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>

    <!-- Styles -->
    <UserControl.Styles>
        
        <!-- Navigation Button -->
        <Style Selector="Button.navigation-button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderMedium}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>
        
        <Style Selector="Button.navigation-button:pointerover">
            <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderStrong}"/>
        </Style>

        <!-- Dashboard Action Buttons -->
        <Style Selector="Button.dashboard-action">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        
        <Style Selector="Button.dashboard-action:pointerover">
            <Setter Property="Background" Value="{DynamicResource BackgroundPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderMedium}"/>
        </Style>

        <!-- Primary Dashboard Button -->
        <Style Selector="Button.dashboard-primary">
            <Setter Property="Background" Value="{DynamicResource StatusSuccess}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="MinWidth" Value="140"/>
        </Style>
        
        <Style Selector="Button.dashboard-primary:pointerover">
            <Setter Property="Background" Value="{DynamicResource StatusSuccess}"/>
        </Style>

        <!-- Large Primary Dashboard Button -->
        <Style Selector="Button.dashboard-primary-large">
            <Setter Property="Background" Value="{DynamicResource StatusSuccess}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
        <Style Selector="Button.dashboard-primary-large:pointerover">
            <Setter Property="Background" Value="{DynamicResource StatusSuccess}"/>
        </Style>

        <!-- Secondary Dashboard Button -->
        <Style Selector="Button.dashboard-secondary">
            <Setter Property="Background" Value="{DynamicResource StatusWarning}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="MinWidth" Value="160"/>
        </Style>
        
        <Style Selector="Button.dashboard-secondary:pointerover">
            <Setter Property="Background" Value="{DynamicResource StatusWarningText}"/>
        </Style>

        <!-- Quick Action Button -->
        <Style Selector="Button.quick-action">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
        
        <Style Selector="Button.quick-action:pointerover">
            <Setter Property="Background" Value="{DynamicResource BackgroundPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderMedium}"/>
        </Style>

        <!-- Loading Spinner Animation -->
        <Style Selector="Border.loading-spinner">
            <Style.Animations>
                <Animation Duration="0:0:1" IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="RotateTransform.Angle" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
            <Setter Property="RenderTransform">
                <RotateTransform/>
            </Setter>
        </Style>
    </UserControl.Styles>
</UserControl>