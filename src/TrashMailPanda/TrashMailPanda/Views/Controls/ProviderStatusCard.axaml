<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TrashMailPanda.ViewModels"
             xmlns:conv="using:TrashMailPanda.Converters"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
             x:Class="TrashMailPanda.Views.Controls.ProviderStatusCard"
             x:DataType="vm:ProviderStatusCardViewModel">
    
    <Design.DataContext>
        <vm:ProviderStatusCardViewModel/>
    </Design.DataContext>

    <UserControl.Resources>
        <!-- Converters for data binding -->
        <conv:StringEqualsConverter x:Key="StringEqualsConverter"/>
        <conv:ProviderStatusToColorConverter x:Key="StatusToColorConverter"/>
        <conv:ProviderStatusToIconConverter x:Key="StatusToIconConverter"/>
        <conv:ProviderStatusToButtonTextConverter x:Key="StatusToButtonTextConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:SetupComplexityToTextConverter x:Key="ComplexityToTextConverter"/>
        <conv:SetupTimeToTextConverter x:Key="SetupTimeToTextConverter"/>
        <conv:ProviderNameToLogoConverter x:Key="ProviderNameToLogoConverter"/>
    </UserControl.Resources>

    <!-- Main Card Container -->
    <Border Classes="ProviderStatusCard"
            Background="{DynamicResource CardBackground}" 
            BorderBrush="{DynamicResource BorderLight}" 
            BorderThickness="1" 
            CornerRadius="8"
            Padding="20"
            Margin="8"
            BoxShadow="0 2 8 0 #00000010">
        
        <!-- Hover effect -->
        <Border.Styles>
            <Style Selector="Border:pointerover">
                <Setter Property="BorderBrush" Value="{DynamicResource AltMediumColor}"/>
                <Setter Property="BoxShadow" Value="0 6 16 0 #00000020"/>
            </Style>
        </Border.Styles>

        <Grid RowDefinitions="Auto,*,Auto">
            
            <!-- Header Section -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,12">
                
                <!-- Provider Icon -->
                <Border Grid.Column="0" 
                        Width="36" Height="36" 
                        CornerRadius="18"
                        Background="{DynamicResource BackgroundPrimary}"
                        BorderBrush="{DynamicResource BorderLight}"
                        BorderThickness="1"
                        VerticalAlignment="Center">
                    <!-- Provider Logo PNG - Hardcoded for each provider -->
                    <Grid>
                        <!-- Gmail Logo -->
                        <Image Source="/Assets/Logos/gmail-logo.png"
                               Width="20" Height="20"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               IsVisible="{Binding ProviderName, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Gmail}"/>
                        
                        <!-- OpenAI Logo -->
                        <Image Source="/Assets/Logos/openai-logo.png"
                               Width="20" Height="20"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               IsVisible="{Binding ProviderName, Converter={StaticResource StringEqualsConverter}, ConverterParameter=OpenAI}"/>
                        
                        <!-- SQLite Logo -->
                        <Image Source="/Assets/Logos/sqlite-logo.png"
                               Width="20" Height="20"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               IsVisible="{Binding ProviderName, Converter={StaticResource StringEqualsConverter}, ConverterParameter=SQLite}"/>
                    </Grid>
                </Border>

                <!-- Provider Info -->
                <StackPanel Grid.Column="1" 
                           Margin="12,0,0,0" 
                           VerticalAlignment="Center">
                    <TextBlock Text="{Binding ProviderDisplayName}"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="{DynamicResource ChromeMediumColor}"/>
                    <TextBlock Text="{Binding ProviderDescription}"
                              FontSize="11"
                              Foreground="{DynamicResource ChromeLowColor}"
                              TextWrapping="Wrap"
                              MaxLines="2"/>
                </StackPanel>

                <!-- Status Icon -->
                <Border Grid.Column="2"
                        Width="24" Height="24"
                        CornerRadius="12"
                        Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                        VerticalAlignment="Top">
                    <TextBlock Text="{Binding Status, Converter={StaticResource StatusToIconConverter}}"
                              FontSize="12"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Foreground="White"/>
                </Border>
            </Grid>

            <!-- Status Content Section -->
            <StackPanel Grid.Row="1" Spacing="8">
                
                <!-- Current Status Display -->
                <Border Background="{DynamicResource ListLowColor}" 
                        Padding="10" 
                        CornerRadius="4">
                    <StackPanel Spacing="4">
                        <TextBlock Text="{Binding StatusDisplayText}"
                                  FontSize="13"
                                  FontWeight="Medium"
                                  Foreground="{DynamicResource ChromeMediumColor}"
                                  TextWrapping="Wrap"/>
                        
                        <!-- Error Message (if any) -->
                        <TextBlock Text="{Binding ErrorMessage}"
                                  FontSize="11"
                                  Foreground="{DynamicResource ErrorText}"
                                  TextWrapping="Wrap"
                                  IsVisible="{Binding !!ErrorMessage}"/>
                        
                        <!-- Last Refresh Time -->
                        <TextBlock Text="{Binding LastRefreshTime, StringFormat='Last checked: {0}'}"
                                  FontSize="10"
                                  Foreground="{DynamicResource ChromeLowColor}"
                                  IsVisible="{Binding !IsLoading}"/>
                    </StackPanel>
                </Border>

                <!-- Authenticated User Information (when available) -->
                <Border IsVisible="{Binding HasAuthenticatedUser}"
                        Classes="SuccessCard"
                        Padding="10"
                        CornerRadius="4">
                    <StackPanel Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="👤" FontSize="12" Foreground="{DynamicResource StatusSuccessText}"/>
                            <TextBlock Text="Signed in as"
                                      FontSize="12"
                                      FontWeight="Medium"
                                      Foreground="{DynamicResource StatusSuccessText}"/>
                        </StackPanel>
                        
                        <TextBlock Text="{Binding AuthenticatedUserEmail}"
                                  FontSize="13"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource StatusSuccessTextStrong}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Setup Information (when setup required) -->
                <Border IsVisible="{Binding RequiresSetup}"
                        Classes="WarningCard"
                        Padding="10"
                        CornerRadius="4">
                    <StackPanel Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="⚙️" FontSize="12"/>
                            <TextBlock Text="{Binding SetupComplexity}"
                                      FontSize="12"
                                      FontWeight="Medium"
                                      Foreground="{DynamicResource ChromeMediumColor}"/>
                            <TextBlock Text="•" FontSize="12" Foreground="{DynamicResource ChromeLowColor}"/>
                            <TextBlock Text="{Binding EstimatedTime}"
                                      FontSize="12"
                                      Foreground="{DynamicResource ChromeLowColor}"/>
                        </StackPanel>
                        
                        <TextBlock Text="{Binding DisplayInfo.Prerequisites}"
                                  FontSize="11"
                                  Foreground="{DynamicResource ChromeMediumColor}"
                                  TextWrapping="Wrap"
                                  IsVisible="{Binding !!DisplayInfo.Prerequisites}"/>
                    </StackPanel>
                </Border>

                <!-- Loading Indicator -->
                <Border IsVisible="{Binding IsLoading}"
                        Classes="InfoCard"
                        Padding="10"
                        CornerRadius="4">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <!-- Loading Animation -->
                        <Border Width="16" Height="16" 
                                CornerRadius="8"
                                Background="{DynamicResource SystemAccentColor}"
                                Classes="loading-pulse"/>
                        <TextBlock Text="Please wait..."
                                  FontSize="12"
                                  Foreground="{DynamicResource ChromeMediumColor}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Action Section -->
            <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,12,0,0">
                
                <!-- Main Action Button -->
                <Button Grid.Column="0"
                        Command="{Binding HandleActionCommand}"
                        IsEnabled="{Binding CanConfigureProvider}"
                        IsVisible="{Binding ShowSetupButton}"
                        Classes="primary"
                        HorizontalAlignment="Stretch"
                        Padding="12,8">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="{Binding ActionButtonText}"
                                  FontSize="13"
                                  FontWeight="Medium"/>
                        <TextBlock Text="→" 
                                  FontSize="13"
                                  Opacity="0.7"/>
                    </StackPanel>
                </Button>

                <!-- Status Button (for healthy providers) -->
                <Button Grid.Column="0"
                        IsVisible="{Binding ShowSetupButton, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}"
                        Classes="provider-status"
                        HorizontalAlignment="Stretch"
                        Padding="12,8"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="✅" FontSize="13"/>
                        <TextBlock Text="Connected and working" 
                                  FontSize="13"
                                  FontWeight="Medium"
                                  Foreground="{DynamicResource SystemAccentColor}"/>
                    </StackPanel>
                </Button>

                <!-- Refresh Button -->
                <Button Grid.Column="1"
                        Command="{Binding RefreshStatusCommand}"
                        IsEnabled="{Binding !IsLoading}"
                        Classes="provider-refresh"
                        Width="36" Height="36"
                        Margin="8,0,0,0"
                        ToolTip.Tip="Refresh status">
                    <TextBlock Text="🔄" FontSize="14"/>
                </Button>
            </Grid>
        </Grid>
    </Border>

    <!-- Styles -->
    <UserControl.Styles>
        <!-- Provider Status Button (for healthy providers) -->
        <Style Selector="Button.provider-status">
            <Setter Property="Background" Value="{DynamicResource ListLowColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource ChromeMediumColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AltMediumHighColor}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>

        <!-- Refresh Button -->
        <Style Selector="Button.provider-refresh">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AltMediumHighColor}"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        
        <Style Selector="Button.provider-refresh:pointerover">
            <Setter Property="Background" Value="{DynamicResource ListLowColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AltMediumColor}"/>
        </Style>
        
        <Style Selector="Button.provider-refresh:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>

        <!-- Loading Animation -->
        <Style Selector="Border.loading-pulse">
            <Style.Animations>
                <Animation Duration="0:0:1.5" IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="1.0"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="Opacity" Value="0.3"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1.0"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>
</UserControl>